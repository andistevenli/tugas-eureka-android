<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivShimmer1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_shimmer" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/ivShimmer2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivShimmer1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/rectangle_shimmer"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:id="@+id/ivShimmer3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivShimmer1"
        app:layout_constraintLeft_toRightOf="@id/ivShimmer2"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/rectangle_shimmer"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/ivShimmer4"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivShimmer3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/rectangle_shimmer"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:id="@+id/ivShimmer5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivShimmer3"
        app:layout_constraintLeft_toRightOf="@id/ivShimmer4"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/rectangle_shimmer"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/ivShimmer6"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivShimmer5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/rectangle_shimmer"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:id="@+id/ivShimmer7"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivShimmer5"
        app:layout_constraintLeft_toRightOf="@id/ivShimmer6"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/rectangle_shimmer"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/ivShimmer8"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivShimmer7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/rectangle_shimmer"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:id="@+id/ivShimmer9"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivShimmer7"
        app:layout_constraintLeft_toRightOf="@id/ivShimmer8"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/rectangle_shimmer"/>

</androidx.constraintlayout.widget.ConstraintLayout>