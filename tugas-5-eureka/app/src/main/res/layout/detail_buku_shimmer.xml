<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivShimmer1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rectangle_shimmer" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/ivShimmer2"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmer1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/rectangle_shimmer"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/ivShimmer3"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmer2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/rectangle_shimmer"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/ivShimmer4"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmer3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/rectangle_shimmer"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/ivShimmer5"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmer4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/rectangle_shimmer"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/ivShimmer6"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmer5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/rectangle_shimmer"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/ivShimmer7"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmer6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/rectangle_shimmer"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/ivShimmer8"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmer7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/rectangle_shimmer"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/ivShimmer9"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmer8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/rectangle_shimmer"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/ivShimmer10"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmer9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/rectangle_shimmer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>